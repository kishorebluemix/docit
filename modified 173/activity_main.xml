         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:layout_above="@+id/register"
         android:layout_marginBottom="10dp"
		 android:layout_marginLeft="10dp"
		 android:layout_marginRight="10dp"
         android:text="Login" 
         
     />
           
    </RelativeLayout>
 
